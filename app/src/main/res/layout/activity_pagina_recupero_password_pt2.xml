<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaginaRecuperoPasswordPt2">

  <TextView
      android:id="@+id/textView6"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="120dp"
      android:layout_marginEnd="50dp"
      android:text="Recupero Password"
      android:textAlignment="center"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editTextRecPsw"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="120dp"
      android:layout_marginEnd="32dp"
      android:ems="10"
      android:hint="Nuova Password"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="@+id/textView6"
      app:layout_constraintStart_toStartOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <EditText
      android:id="@+id/editTextConfRecPsw"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="Conferma Password"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="@+id/editTextRecPsw"
      app:layout_constraintStart_toStartOf="@+id/editTextRecPsw"
      app:layout_constraintTop_toBottomOf="@+id/editTextRecPsw" />

  <Button
      android:id="@+id/btnRecuperaPsw"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="150dp"
      android:layout_marginEnd="24dp"
      android:text="RECUPERA"
      app:cornerRadius="8dp"
      app:layout_constraintEnd_toEndOf="@+id/editTextConfRecPsw"
      app:layout_constraintStart_toStartOf="@+id/editTextConfRecPsw"
      app:layout_constraintTop_toBottomOf="@+id/editTextConfRecPsw" />
</androidx.constraintlayout.widget.ConstraintLayout>