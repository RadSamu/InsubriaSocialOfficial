<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaginaMostraAnnuncio">

    <Button
        android:id="@+id/btnIndietro3"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#0B6600"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_left_arrow"
        app:iconGravity="textStart"
        app:iconPadding="-2dp"
        app:iconSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewMostraAnnuncio"
        android:layout_width="367dp"
        android:layout_height="465dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIndietro3"
        app:layout_constraintVertical_bias="0.183" />

    <Button
        android:id="@+id/btnApriMappa"
        android:layout_width="367dp"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#0B6600"
        android:includeFontPadding="true"
        android:paddingLeft="50dp"
        android:text="MOSTRA SULLA MAPPA"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_map"
        app:iconPadding="-20dp"
        app:iconSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewMostraAnnuncio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewMostraAnnuncio"
        app:layout_constraintTop_toBottomOf="@+id/btnTogliPreferiti" />

    <Button
        android:id="@+id/btnTogliPreferiti"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#F44336"
        android:text="RIMUOVI DAI PREFERITI"
        android:textSize="12sp"
        app:cornerRadius="4dp"
        app:icon="@drawable/baseline_bookmark_remove_24"
        app:iconSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/textViewMostraAnnuncio"
        app:layout_constraintTop_toBottomOf="@+id/textViewMostraAnnuncio" />

    <Button
        android:id="@+id/btnAggiuntiPreferiti"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#0B6600"
        android:text="AGGIUNGI AI PREFERITI"
        android:textSize="12sp"
        app:cornerRadius="4dp"
        app:icon="@drawable/baseline_bookmark_24"
        app:iconSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewMostraAnnuncio"
        app:layout_constraintTop_toBottomOf="@+id/textViewMostraAnnuncio" />

</androidx.constraintlayout.widget.ConstraintLayout>