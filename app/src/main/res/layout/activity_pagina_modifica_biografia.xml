<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaginaModificaBiografia">

    <EditText
        android:id="@+id/editTextModificaBio"
        android:layout_width="342dp"
        android:layout_height="304dp"
        android:ems="10"
        android:hint="Descrizione"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/btnEliminaBio"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#F44336"
        android:padding="2dp"
        android:text="ELIMINA"
        app:cornerRadius="4dp"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:iconSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSalvaBio"
        app:layout_constraintStart_toStartOf="@+id/editTextModificaBio"
        app:layout_constraintTop_toBottomOf="@+id/editTextModificaBio" />

    <Button
        android:id="@+id/btnSalvaBio"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#0B6600"
        android:padding="2dp"
        android:text="SALVA"
        app:cornerRadius="4dp"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextModificaBio"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextModificaBio" />

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="32dp"
        android:text="MODIFICA BIOGRAFIA"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIndietro"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0B6600"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_left_arrow"
        app:iconGravity="textStart"
        app:iconPadding="-2dp"
        app:iconSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>